<style>
.product-blink-wrap {
    width: 90%;
    max-width: 600px;
    position: relative;
    margin: 0 auto;
}
  .product-blink-wrap img{
    width:90%;
    height:auto;
    max-width:600px;
    height:600px;
    display:block;
    transition:all 0.05s linear;
    object-fit:cover;
    object-position:top;
  }
  .product-blink-wrap img.first{
    z-index:2;
    animation-name: first;
animation-duration: 2s;
animation-iteration-count: infinite;
  }
  .product-blink-wrap img.second{
    z-index:1;
    position:absolute;
    top:0;
    left:0;
    animation-name: second;
animation-duration: 2s;
animation-iteration-count: infinite;
  }
  .product-blink-wrap img.third{
    z-index:0;
    position:absolute;
    top:0;
    left:0;
    animation-name: third;
animation-duration: 2s;
animation-iteration-count: infinite;
  }
  @keyframes first {
  0% { opacity: 1; }
  33% { opacity: 0; }
  66% { opacity: 0; }
  100% { opacity: 1; }
}
    @keyframes second {
  0% { opacity: 0; }
  33% { opacity: 1; }
  66% { opacity: 0; }
  100% { opacity: 0; }
}
    @keyframes third {
  0% { opacity: 0; }
  33% { opacity: 0; }
  66% { opacity: 1; }
  100% { opacity: 0; }
}
</style>
<a href="/products/{{ section.settings.product.handle }}">
<div class="product-blink-wrap">
  <img class="first" src="{{ section.settings.product.media[0] | img_url: '800x' }}">
  <img class="second" src="{{ section.settings.product.media[1] | img_url: '800x' }}">
  <img class="third" src="{{ section.settings.product.media[2] | img_url: '800x' }}">
</div>
</a>
{% schema %}
{
  "name": "Producto animado",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    }
  ],
  "presets": [
    {
      "name": "Producto animado"
    }
  ]
}
{% endschema %}