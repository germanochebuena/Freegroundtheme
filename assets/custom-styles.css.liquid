{% if settings.only_drawer == true %}
  .header__inline-menu {
    margin-left: -1.2rem;
    grid-area: navigation;
    display: none;
  }
  .header {
    display: grid;
    grid-template-areas: "left-icon heading icons";
    grid-template-columns: 1fr 2fr 1fr;
    align-items: center;
  }
  @media screen and (min-width: 990px) {
    header-drawer {
      display: block !important;
    }
    .header:not(.header--top-center) > .header__search,
    .header--top-center * > .header__search {
      display: block !important;
    }
    .header--top-center > .header__search {
      display: none;
    }
  }
{% endif %}

{% if settings.show_sideheader == true %}
  @media screen and (min-width:992px) {
    div#side-layout {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
    }
    div#side-layout > .header-column {
      width: 20%;
      position: relative;
      min-width: 340px;
    }
    div#side-layout > .main-column {
      width: 80%;
    }
    div#shopify-section-header-left {
      position: sticky;
      top: 0;
    }
    /*---Header alignment---*/
    header.header.header--middle-left.header--mobile-center.page-width.header--has-menu {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    ul.list-menu.list-menu--inline {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    sticky-header.header-wrapper {
      height: 100vh;
    }
  }
{% endif %}
