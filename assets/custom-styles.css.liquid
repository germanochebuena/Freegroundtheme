body.index .header-wrapper, body.page .header-wrapper {
    transition: background-color 0.3s ease;
  }
body.index #shopify-section-header:not(.menu-open):not(.shopify-section-header-sticky) .header-wrapper, body.page #shopify-section-header:not(.menu-open):not(.shopify-section-header-sticky) .header-wrapper {
    background: linear-gradient(#0000009e, #00000000);
  }
body.index header.header, body.page header.header {
    margin-bottom: -60px;
    z-index: 2;
  }
body.index #shopify-section-header:not(.menu-open):not(.shopify-section-header-sticky) .header__icon, body.page #shopify-section-header:not(.menu-open):not(.shopify-section-header-sticky) .header__icon {
